<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.media3.ui.AspectRatioFrameLayout
        android:id="@+id/videoFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        app:resize_mode="fill">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </androidx.media3.ui.AspectRatioFrameLayout>


    <!-- SceneView for 3D model - TRANSPARENT background -->
    <io.github.sceneview.SceneView
        android:id="@+id/sceneView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <!-- Buttons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnPlatVideo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Play Video"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnTogglePitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnTogglePitch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Toggle Pitch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnAnimateBall"
            app:layout_constraintStart_toEndOf="@id/btnPlatVideo"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAnimateBall"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Animate Ball"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnTogglePitch"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnAddImpactDots"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="ball dots"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnMultipleTrack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btnMultipleTrack"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="multple track"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnTogglePitchRegion"
            app:layout_constraintStart_toEndOf="@+id/btnAddImpactDots"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnTogglePitchRegion"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="pitch map"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnMultipleTrack"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>